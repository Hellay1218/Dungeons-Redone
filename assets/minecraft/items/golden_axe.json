{
  "model": {
    "type": "minecraft:select",
    "property": "minecraft:component",
    "component": "minecraft:custom_name",
    "cases": [
      {
        "when": ["Sickle" , "sickle"],
        "model": {
            "type": "minecraft:model",
            "model": "hellay:item/sickle"
          }
      },
      {
        "when": ["The First Laugh" , "the first laugh" , "First Laugh" , "first laugh"],
        "model": {
            "type": "minecraft:model",
            "model": "hellay:item/first_laugh"
          }
      },
      {
        "when": ["The Last Laugh" , "the last laugh" , "Last Laugh" , "last laugh"],
        "model": {
            "type": "minecraft:model",
            "model": "hellay:item/last_laugh"
          }
      },
      {
        "when": ["Nightmare's Bite" , "nightmare's bite" , "Nightmares Bite" , "nightmares bite"],
        "model": {
            "type": "minecraft:model",
            "model": "hellay:item/nightmares_bite"
          }
      },
      {
        "when": ["Fire Brand" , "fire brand"],
        "model": {
          "type": "minecraft:select",
          "property": "minecraft:display_context",
          "cases": [
            {
              "when": ["gui","ground","fixed"],
              "model": {
                "type": "minecraft:model",
                "model": "hellay:item/fire_axe_inventory"
              }
            }
          ],
          "fallback": {
            "type": "minecraft:model",
            "model": "hellay:item/fire_axe"
          }
        }
      },
      {
        "when": ["Frost Scythe" , "frost scythe"],
        "model": {
          "type": "minecraft:select",
          "property": "minecraft:display_context",
          "cases": [
            {
              "when": ["gui","ground","fixed"],
              "model": {
                "type": "minecraft:model",
                "model": "hellay:item/frost_scythe_inventory"
              }
            }
          ],
          "fallback": {
            "type": "minecraft:model",
            "model": "hellay:item/frost_scythe"
          }
        }
      }
    ],
    "fallback": {
      "type": "minecraft:select",
      "property": "minecraft:context_entity_type",
      "cases": [
        {
          "when": "minecraft:piglin_brute",
          "model": {
            "type": "minecraft:model",
            "model": "hellay:item/fire_axe"
          }
        },
        {
          "when": "minecraft:stray",
          "model": {
            "type": "minecraft:model",
            "model": "hellay:item/frost_scythe"
          }
        }
      ],
      "fallback": {
        "type": "minecraft:model",
        "model": "minecraft:item/golden_axe"
      }
    }
  }
}